/**app.wxss**/

:root {
  --theme-color: #8E0B02;
}

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

@keyframes scale {
  from {
    transform: translate(-50%,-50%) scale(0);
  }
  to {
    transform: translate(-50%,-50%) scale(1);
  }
}

