/* pages/order/order.wxss */

.order-box {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.order-nav {
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid rgba(0,0,0,.3);

  position: relative;
}

.order-nav .indicator {
  width: 50%;
  height: 8rpx;
  background-color: #8E0B02;

  position: absolute;
  bottom: 0;
  transition: all .3s
}

.order-nav-item {
  float: left;
  font-size: 40rpx;
  font-weight: 700;
  width: 50%;
  height: 100%;
  line-height: 120rpx;
  text-align: center;
}

.order-scroll-body {
  width: 100%;
  height: calc(100% - 120rpx);
}

.order-scroll-body .item-list {
  width: 100%;
  height: 100%;
}

.order-item {
  width: 100%;
  height: 200rpx;
}