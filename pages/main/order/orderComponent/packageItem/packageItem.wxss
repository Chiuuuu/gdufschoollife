/* pages/main/order/orderComponent/orderItem/orderItem.wxss */

.package-item {
  width: 100%;
  height: 200rpx;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
  padding: 0 30rpx;

  display: flex;
  align-items: center;
}

.package-item image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}

.package-item .info {
  flex: 1;
  height: 100%;
  line-height: 100rpx;
}

.package-item .info .top {
  display: flex;
  justify-content: space-between;
}

.package-item .info .located {
  font-size: 50rpx;
  font-weight: 700;
  color: #333;
}

.package-item .info .compony {
  font-size: 36rpx;
  color: #999;
}

.package-item .info .deadline {
  font-size: 40rpx;
  color: #333;
}

