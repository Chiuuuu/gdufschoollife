/**index.wxss**/



.container {
  width: 100%;
  height: 80%;
  margin-top: 20%;
}

.login-title {
  font-size: 24px;
  color: #8E0B02;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.login-input
{
  width: calc(100% - 160rpx);
  margin-bottom: 240rpx;
}

.login-input input {
  margin: 40rpx 0;
  padding-left: 20rpx;
  border-radius: 40rpx;
  border: 1px solid #000;

  font-size: 16px;
  height: 60rpx;
  line-height: 60prx;

}

.login-input button {
  color: #fff;
  font-size: 16px;
  background-color: #8E0B02;

  display: block;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 64rpx;
}

.login-serve {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #8E0B02;
  font-size: 14px;
  margin-top: 20rpx;
}

.button-hover {
  opacity: .8;
}
