.module-header {
  position: relative;
  width: 100%;
  height: 100rpx;
}

.module-header .line {
  width: 90%;
  height: 1px;
  background-color: #ccc;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.module-header .title {
  background-color: #fff;
  padding: 0 15rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}